<!-- form_for is a Rail helper med which takes 1 parameters and a block of fields. The form is later on refered by name f -->
<%= form_for(@article) do |f| %>
  <ul>
    <% @article.errors.full_messages.each do |error| %>
    <li><%= error  %></li>
    <% end %>
  </ul>

  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
